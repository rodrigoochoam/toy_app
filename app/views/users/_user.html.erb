<div id="<%= dom_id user %>">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <% if user.microposts.first %>
    <p>
      <strong>First Post:</strong>
      <%= user.microposts.first.content %>
    </p>
  <% end %>

</div>
